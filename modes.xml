<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="spa-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="spa.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="spa-gener" install="yes">
    <pipeline>
      <program name="lt-proc -b">
        <file name="spa.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="spa-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="spa.automorf.bin"/>
      </program>
      <program name="cg-conv -a"/>
      <program name="vislcg3 --trace --grammar">
        <file name="spa.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  
  <mode name="spa-disam-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="spa.automorf.bin"/>
      </program>
      <program name="cg-proc">
        <file name="spa.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2 -p">
        <file name="spa.prob"/>
      </program>
      <program name="apertium-extract-caps"/>
    </pipeline>
  </mode>

  <mode name="spa-tagger" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="spa.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2 -p">
        <file name="spa.prob"/>
      </program>
      <program name="apertium-extract-caps"/>
      <program name="lt-proc -b">
        <file name="spa.autogen.bin"/>
      </program>
      <program name="apertium-restore-caps">
        <file name="spa.crx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="spa-disam-debug">
    <pipeline>
      <program name="lt-proc -w">
        <file name="spa.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-spa.spa.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>
